# Autenticação (gere com: openssl rand -base64 32)
AUTH_SECRET="your-auth-secret-here"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Banco de Dados
DATABASE_URL="postgresql://user:password@localhost:5432/saas_oduo"
POSTGRES_URL="postgresql://user:password@localhost:5432/saas_oduo"

# Prisma Accelerate (opcional - para produção)
# PRISMA_DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=..."

# Domínio
NEXT_PUBLIC_ROOT_DOMAIN="localhost:3000"

# Email (Resend)
RESEND_API_KEY="re_..."

# Criptografia Fiscal (gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
FISCAL_ENCRYPTION_KEY="your-64-char-hex-key-here"

# Cloudinary (opcional - para upload de imagens)
# CLOUDINARY_CLOUD_NAME="..."
# CLOUDINARY_API_KEY="..."
# CLOUDINARY_API_SECRET="..."

# Stripe (opcional - para pagamentos)
# STRIPE_SECRET_KEY="sk_..."
